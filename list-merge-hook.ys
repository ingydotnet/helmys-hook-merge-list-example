!YS-v0

use:
  list-merge:
    :url 'github:ingydotnet/helmys-hook-merge-list-example/main/list-merge.ys'

defn helmys-hook-out(o):
  values-file =:
    ENV.VALUES_FILE ||:
      die: "$FILE requires VALUES_FILE var"

  extra-values =: values-file:yaml/load-file.cronjob.env

  when o.kind == 'CronJob':
    walk/prewalk _ o:
      fn(o):
        node =: o.env
        if node:
          assoc-in o ['env']:
            list-merge 'name': node extra-values
          else: o
